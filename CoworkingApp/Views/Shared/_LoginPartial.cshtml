@using Microsoft.AspNetCore.Identity
@using CoworkingApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // Obtenemos el usuario completo para acceder a sus créditos
        var user = await UserManager.GetUserAsync(User);

        <li class="nav-item d-flex align-items-center me-3">
            <i class="fas fa-coins text-warning me-2"></i>
            <span class="fw-bold" style="color: var(--texto-principal);">@user.CreditosDisponibles.ToString("F2")</span>
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                @user.Email
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownUser">
                <li><a class="dropdown-item" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-tachometer-alt fa-fw me-2"></i>Mi Panel</a></li>

                @if (User.IsInRole("Admin"))
                {
                    <li><hr class="dropdown-divider"></li>
                    <li><h6 class="dropdown-header">Admin</h6></li>
                    <li><a class="dropdown-item" asp-controller="UserManagement" asp-action="Index"><i class="fas fa-users-cog fa-fw me-2"></i>Gestionar Usuarios</a></li>
                    <li><a class="dropdown-item" asp-controller="CreditPackages" asp-action="Index"><i class="fas fa-box-open fa-fw me-2"></i>Gestionar Paquetes</a></li>
                    <li><a class="dropdown-item" asp-controller="TiposEspacio" asp-action="Index"><i class="fas fa-building fa-fw me-2"></i>Gestionar Espacios</a></li>
                }

                <li><hr class="dropdown-divider"></li>
                <li>
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt fa-fw me-2"></i>Cerrar Sesión</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Registrarse</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-outline-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Iniciar Sesión</a>
        </li>
    }
</ul>