@model IEnumerable<CoworkingApp.Models.CreditPackage>

@{
    ViewData["Title"] = "Comprar Créditos";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Tienda de Créditos</h1>
        <p class="lead text-muted">Elige uno de nuestros paquetes para recargar tu cuenta.</p>
    </div>

    <div class="row justify-content-center">
        @foreach (var package in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm text-center">
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">@package.Name</h4>
                        <p class="text-muted">@package.Description</p>

                        <div class="my-4">
                            <span class="display-4 text-primary font-weight-bold">@package.Credits</span>
                            <span class="text-muted">créditos</span>
                        </div>

                        <div class="mt-auto">
                            <p class="h5 mb-3">Bs @package.Price.ToString("F2")</p>
                            <form asp-action="Buy" method="post">
                                <input type="hidden" name="packageId" value="@package.Id" />
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-primary w-100">Comprar Ahora</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>